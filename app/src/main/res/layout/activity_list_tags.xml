<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:background="@color/fondo"
    tools:context=".List_tags">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_regresar"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:src="@drawable/app_regresar"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/img_cabecera"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/app_cabe_logo_tele"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Cliente:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/lblCliente"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            />
        </RelativeLayout>

        <TextView
            android:id="@+id/lbltitulo"
            android:layout_width="291dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:text="VehÃ­culos registrados"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/lblnota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Seleccione de la lista el tag que desea recargar o actualizar"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            android:textStyle="italic" />

        <ListView
            android:id="@+id/lsvw_tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lblnota"
            android:layout_marginTop="15dp" />

    </LinearLayout>



</RelativeLayout>












