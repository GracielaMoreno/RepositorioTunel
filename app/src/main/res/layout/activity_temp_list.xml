<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Temp_list">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCampo2"
            android:layout_width="114dp"
            android:layout_height="75dp"
            android:background="@color/colorApp"
            android:fontFamily="@font/gothambook"
            android:gravity="center"
            android:text="Placa"
            android:textColor="@color/fondo"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtVacio"
            android:layout_width="9dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@+id/txtCampo2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtVacio"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txtCampo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/robotolight"
                android:text="Tag"
                android:textColor="@color/texto"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtCampo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtCampo3"
                android:fontFamily="@font/robotolight"
                android:text="Modelo"
                android:textColor="@color/texto"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtCampo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtCampo4"
                android:fontFamily="@font/robotolight"
                android:text="Saldo"
                android:textColor="@color/texto"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>








