<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Temp_list_hist_soli_pend"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCampo2"
            android:layout_width="133dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txtCampo8"
            android:background="@color/colorApp"
            android:fontFamily="@font/gothambook"
            android:gravity="center"
            android:text="st_codigo"
            android:textColor="@color/fondo"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtCampo8"
            android:layout_width="133dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorApp"
            android:fontFamily="@font/gothambook"
            android:gravity="center"
            android:text="Solicitud"
            android:textColor="@color/fondo"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtVacio"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txtCampo2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtVacio"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCampo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/robotolight"
                android:text="Fecha"
                android:textSize="14dp"
                android:textColor="@color/texto" />

            <TextView
                android:id="@+id/txtCampo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/txtCampo3"
                android:fontFamily="@font/robotolight"
                android:text="Estado"
                android:textSize="14dp"
                android:textColor="@color/texto" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>








