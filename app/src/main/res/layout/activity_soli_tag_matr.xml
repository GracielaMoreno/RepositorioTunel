<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Soli_tag"
    android:orientation="vertical"
    android:background="@color/fondo">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorApp"
        android:id="@+id/mibarra">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img_regresar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/flecha"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:id="@+id/img_cabecera"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/logoemmop"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mibarra"
        android:id="@+id/title"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE VEHICULOS"
            android:fontFamily="@font/gothambook"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:id="@+id/body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:text="Ingresar las fotos de los vehiculos para los cuales se solicitara un TAG"
                android:textColor="@color/texto"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <Button
                    android:id="@+id/btnMatricula1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Fotografiar Matricula 1"
                    android:background="@color/colorApp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/fondo"
                    />

                <ImageView
                    android:id="@+id/imageMatri1"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/btnMatricula2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Fotografiar Matricula 2"
                    android:background="@color/colorApp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/fondo"/>
                <ImageView
                    android:id="@+id/imageMatri2"
                    android:layout_width="320dp"
                    android:layout_height="120dp"

                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/btnMatricula3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Fotografiar Matricula 3"
                    android:background="@color/colorApp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/fondo" />
                <ImageView
                    android:id="@+id/imageMatri3"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/btnEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:text="Continuar"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorApp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/fondo" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <include
        layout="@layout/footer"
         />
</RelativeLayout>
